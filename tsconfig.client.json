{
    "compilerOptions": {
      "outDir": "./public/js/",
      "noImplicitAny": false,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "strictFunctionTypes": false,
      "suppressExcessPropertyErrors": true,
      "errorReporting": {
        "excludeFiles": ["src/client/components/*.tsx"],
        "excludeCodes": [2339]
      },
      "lib":[
          "es2015", "dom"
      ]
    },
    "include": [
        "src/client/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
  }